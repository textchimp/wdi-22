
<h2>Artist Details</h2>

<p>Name: <%= @artist.name %></p>

<p>Nationality: <%= @artist.nationality %></p>

<p>DOB: <%= @artist.dob %></p>

<p>Period: <%= @artist.period %></p>

<p>List of Works:</p>

<ul>
  <% @artist.works.each do |work| %>
    <li>
      <a href="/works/<%= work.id %>"><%= work.title %></a>
    </li>
  <% end %>
</ul>

<a href="/artists/<%= @artist.id %>/edit">Edit Artist Details</a>

<br>

<img class="artist_photo" src="<%= @artist.image %>" alt="">
