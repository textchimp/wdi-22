<h2>Edit Work</h2>

<%= form_for @work do |f| %>

  <p>
  <%= f.label :artist_id %>
  <%= f.collection_select( :artist_id, @artists, :id, :name, include_blank: true ) %>
  </p>

  <p>
    <%= f.label :title %>
    <%= f.text_field :title, required: true %>
  </p>

<p>
  <%= f.label :year %>
  <%= f.text_field :year, required: true %>
</p>

<p>
  <%= f.label :medium %>
  <%= f.text_field :medium, required: true %>
</p>

<p>
  <%= f.label :style %>
  <%= f.text_field :style, required: true %>
</p>

<p>
  <%= f.label :image %>
  <%= f.text_field :image, required: true %>
</p>



<%= f.submit %>

<% end %>
