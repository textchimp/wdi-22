<h1>Login</h1>

<% if flash[:error].present? %>
  <p><%= flash[:error] %></p>
<% end %>

<%= form_tag login_path do %>

  <%= label_tag 'Email' %>
  <%= email_field_tag :email, nil %>
  <br>

  <%= label_tag 'Password' %>
  <%= password_field_tag :password, nil %>
  <br>

  <%= submit_tag 'Login' %>

<% end %>
